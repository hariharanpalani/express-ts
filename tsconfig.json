{
    "compilerOptions": {
        "module": "commonjs",  
        "lib" : ["es6"],
        "types" : ["reflect-metadata", "node"],
        "typeRoots": [
            "node_modules/@types"
        ],      
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}